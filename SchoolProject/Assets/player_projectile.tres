[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform vec4 swordorigin:hint_color;
uniform vec4 swordnew:hint_color;


void fragment() {
	
	vec4 pixel = texture(TEXTURE,UV);
	
	if (round(pixel) == round(swordorigin))
		COLOR = swordnew;
	else
		COLOR = pixel;
	}
	"

